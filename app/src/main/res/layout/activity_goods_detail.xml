<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:id="@+id/tv_back"
            style="@style/back_textview"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:text="详情"
            android:textColor="@android:color/white"
            />
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/rl_title"
    android:layout_above="@+id/ll_bot"
    >
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="@drawable/welcome_1"
        android:scaleType="centerCrop"
        />
    <TextView
        android:layout_below="@id/iv_goods"
        android:id="@+id/tv_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A9A9A9"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"/>
    <LinearLayout
        android:id="@+id/ll_price"
        android:layout_below="@id/tv_des"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="售价："
            android:layout_marginLeft="5dp"
            android:textColor="#808080"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/price_color"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_num"
        android:layout_below="@id/ll_price"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="选择数量："
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:textColor="#808080"/>
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="28dp"
            android:background="@drawable/number_bg"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_minus"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="—"/>
            <View
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:background="#C0C0C0"/>
            <TextView
                android:id="@+id/tv_number"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="1"
                android:inputType="number"
                android:gravity="center"/>
            <View
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:background="#C0C0C0"/>
            <TextView
                android:id="@+id/tv_add"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ll_num"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="请选择收货地址"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="18sp"
            android:textColor="#808080"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/arr"
            android:layout_marginRight="20dp"/>
    </LinearLayout>



</RelativeLayout>
</ScrollView>
    <LinearLayout
        android:id="@+id/ll_bot"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="立即购买"
            android:gravity="center"
            android:layout_weight="1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/tv_shop_cart"
            android:layout_width="0dp"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/tv_pinglun"
            android:layout_width="0dp"
            android:text="查看用户评价"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>