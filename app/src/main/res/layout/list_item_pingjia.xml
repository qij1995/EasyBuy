<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="张三："
                android:textColor="#000000"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_my_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="3214234123"
                android:textColor="#cecece"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_my_content"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="ahahahahahahasssssssssssssssa"
                android:maxLines="3"
                android:ellipsize="end"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_my"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="right"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_sale_content"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaa"/>
                <TextView
                    android:id="@+id/tv_sale_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="：涛哥"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:background="#CECECE"/>
    </LinearLayout>


</LinearLayout>